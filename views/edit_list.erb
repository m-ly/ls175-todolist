<section id="todos">
  <header>
   <h2>Editing: <%= @list[:name] %></h2>
   <ul>
     <li>
      <form action="/lists/<%= params[:id] %>/delete" method="post" >
        <button  type="submit" class="delete">Delete List</button>
      </form>
     </li>
  </header>
</section>

<form action="/lists/<%= params[:id] %>" method="post">
  <dl> 
    <dt>
      <label for="list_name">Enter the new name for your new list:</label>
    </dt>
    </dd>
      <input name="list_name" placeholder="list_name" type="text" value="<%= params[:list_name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="save">
    <a href="/lists/<%= params[:id] %>">Cancel</a>
  </fieldset>
</form>

