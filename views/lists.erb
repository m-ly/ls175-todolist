<ul id="lists">
  <% @lists.each_with_index do |list, index| %>
    <% if list_complete?(list) %>
      <li class ="<%= list_class(list) %>" >
    <% else %>
      <li>
    <% end %>
        <a href="/lists/<%= index %>">
          <h2><%= list[:name] %></h2>
          <p><%= finished_todos(list) %> / <%=  todos_size(list) %></p>
        </a>
      </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>